# Server
PORT=3000
NODE_ENV=development

# CORS - comma-separated origins (e.g. http://localhost:3000,https://app.myfans.com)
CORS_ORIGIN=http://localhost:3000

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=myfans

# Auth (dev: use X-User-Id header with user UUID; prod: replace with JWT)
# X-User-Id is passed per-request for development

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Cache TTL (in seconds)
CACHE_TTL_CREATORS=300
CACHE_TTL_POSTS=120

